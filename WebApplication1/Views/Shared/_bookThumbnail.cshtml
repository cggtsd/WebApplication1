@model BookModelcs

    <div class="card mb-4 shadow-sm">
        @* <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"></svg> *@
        <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl)?"/images/noimage.png":Model.CoverImageUrl)" class="img-thumbnail" />
        <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name is not avaialable" : Model.Title)</h3>
        <p class="card-text"> @(string.IsNullOrEmpty(Model.Description) ? "No Description" : Model.Description)</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-route-id="@Model.Id" asp-route="bookDetailRoute"
                       class="btn btn-sm btn-outline-secondary">View Details</a>
                </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "no Author" : Model.Author)</small>

            </div>
        </div>
    </div>
    


